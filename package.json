{
  "author": "MaxMind",
  "bugs": {
    "url": "https://github.com/maxmind/dev-site/issues"
  },
  "description": "Developer website for MaxMind",
  "devDependencies": {
    "@babel/register": "^7.9.0",
    "@mdx-js/react": "^1.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-mdx": "^1.6.9",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "eslint-plugin-sort-keys-fix": "^1.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "remark-cli": "^8.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-lint-no-empty-url": "^2.0.0",
    "remark-lint-write-good": "^1.2.0",
    "remark-preset-github": "^1.0.0",
    "remark-preset-lint-markdown-style-guide": "^3.0.0",
    "remark-preset-lint-recommended": "^4.0.0"
  },
  "engines": {
    "node": ">=10.13.0",
    "yarn": "^1.17.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "content/**/*.{mdx}": [
      "lint:content"
    ],
    "gatsby/**/*.json": [
      "yarn workspace gatsby lint:json"
    ],
    "gatsby/**/*.{js,ts,tsx}": [
      "yarn workspace gatsby lint:scripts"
    ],
    "gatsby/**/*.{[s]css}": [
      "yarn workspace gatsby lint:styles"
    ],
    "**/*.{json},{!gatsby}": [
      "lint:json"
    ]
  },
  "name": "dev-site",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/maxmind/dev-site.git"
  },
  "scripts": {
    "clean:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "clear:cache": "yarn --cwd gatsby gatsby clean",
    "build": "yarn workspace gatsby clean && yarn workspace gatsby build && rm -rf firebase/static-site && mv gatsby/public firebase/static-site",
    "deploy": "yarn workspace firebase deploy",
    "deploy:ci": "yarn workspace firebase deploy:ci",
    "develop": "yarn clear:cache && yarn workspace gatsby develop",
    "lint": "run-p lint:*",
    "lint:configs": "eslint .*rc.js --no-ignore",
    "lint:content": "remark . --ext mdx",
    "lint:json": "eslint . --ext json --ignore-pattern gatsby",
    "lint:gatsby": "yarn workspace gatsby lint",
    "serve": "yarn build && yarn workspace firebase serve"
  },
  "workspaces": {
    "nohoist": [
      "gatsby/**"
    ],
    "packages": [
      "firebase",
      "gatsby"
    ]
  },
  "version": "0.1.0"
}
