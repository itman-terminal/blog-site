{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "ES2019"
    ],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": false,
    "paths": {
      "*": ["src/types/*"],
      "openapi-types": ["src/types/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019",
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": ["src/**/*"]
}
